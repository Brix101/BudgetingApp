<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BudgetingApp.AppBarOverlay">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btnUpdateBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/abc_vector_test"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtUpdateTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="Sample"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textSize="20sp" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <EditText
            android:id="@+id/txtUpdateDate"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:ems="10"
            android:hint="Date"
            android:inputType="date"/>
        <EditText
            android:id="@+id/txtUpdateCategory"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:ems="10"
            android:inputType="none"
            android:contentDescription="Category"
            android:hint="Category"
            android:textIsSelectable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="â‚± "/>
        <EditText
            android:id="@+id/txtUpdateAmount"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:ems="10"
            android:inputType="numberDecimal"
            android:contentDescription="Amount"
            android:hint="Amount"/>
    </LinearLayout>
        <EditText
            android:id="@+id/txtUpdateDescription"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:ems="10"
            android:inputType="textPersonName"
            android:contentDescription="Description"
            android:hint="Description"/>

        <LinearLayout
            android:id="@+id/btnUpdateSelector"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Update"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/UpdateRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:theme="@style/Theme.BudgetingApp.AppBarOverlay">
                <TextView
                    android:id="@+id/txtCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:padding="10dp"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"/>
            </com.google.android.material.appbar.AppBarLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerUpdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>